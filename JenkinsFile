pipeline {
  agent any

  tools {nodejs "Nodejs"}
  
  stages {
    stage('Test') {
      steps {
        echo 'Starting Continous Integration Pipleline...'
        sh "chmod +x -R ${env.WORKSPACE}"
        sh './jenkins/scripts/test.sh'
      }
    }
    stage('Deploy') { 
      steps {
        echo 'Start Deploy Services'
        sh "chmod +x -R ${env.WORKSPACE}"
        sh './jenkins/scripts/deploy.sh' 
      }
    }
  }
}

